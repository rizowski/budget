{
  "name": "budget",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Colten Rouska <crouska@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=8 <9"
  },
  "scripts": {
    "dev:server": "nodemon src -e js,graphql -w src",
    "local": "npm-run-all --parallel dev:web dev:server",
    "dev:web": "parcel watch public/index.html",
    "build": "parcel build public/index.html",
    "precommit": "lint-staged",
    "test": "NODE_ENV=test mocha --opts ./test/mocha.opts",
    "compose:up": "docker-compose -f .local/docker-compose.yml up -d",
    "lint:fix": "npm run lint -- --fix",
    "lint": "xo --quiet"
  },
  "lint-staged": {
    "*.{js}": [
      "npm run lint:fix",
      "git add"
    ],
    "*.jsx": [
      "xo --prettier --quiet --plugin eslint-plugin-react --ext \".jsx\" --global window --global document --fix",
      "git add"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "xo": {
    "prettier": true,
    "envs": {
      "mocha": true
    },
    "plugins": [
      "unicorn"
    ],
    "extends": [
      "xo-react/space"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      }
    },
    "overrides": [
      {
        "files": "public/**/*.jsx",
        "plugins": [
          "react"
        ],
        "globals": [
          "window",
          "document"
        ]
      },
      {
        "files": "test/**/*test.js",
        "env": {
          "mocha": true
        }
      }
    ],
    "rules": {
      "operator-linebreak": "off",
      "prefer-destructuring": "warn",
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "import/no-unassigned-import": "warn",
      "unicorn/no-process-exit": "warn",
      "camelcase": "warn",
      "capitalized-comments": "off",
      "react/no-array-index-key": "warn"
    }
  },
  "prettier": {
    "printWidth": 160,
    "semi": true,
    "useTabs": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "singleQuote": true,
    "bracketSpacing": true
  },
  "devDependencies": {
    "@material-ui/core": "^1.3.1",
    "@material-ui/icons": "^1.1.0",
    "axios": "^0.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "bootstrap": "^4.1.1",
    "chai": "^4.1.2",
    "eslint": "^5.0.1",
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-react": "^7.10.0",
    "husky": "^1.0.0-rc.12",
    "jquery": "1.9.1 - 3",
    "lint-staged": "^7.2.0",
    "lodash.groupby": "^4.6.0",
    "lodash.orderby": "^4.6.0",
    "mocha": "^5.2.0",
    "moment": "^2.22.2",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "parcel": "^1.9.4",
    "popper.js": "^1.14.3",
    "prettier": "^1.13.7",
    "prop-types": "^15.6.2",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-router-dom": "^4.3.1",
    "sinon": "^6.1.3",
    "xo": "^0.21.1"
  },
  "dependencies": {
    "apollo-server-hapi": "^1.3.6",
    "graphql": "^0.13.2",
    "graphql-playground-middleware-hapi": "^1.7.2",
    "graphql-tools": "^3.0.5",
    "hapi": "^17.5.2",
    "inert": "^5.1.0",
    "lodash.omit": "^4.5.0",
    "mongodb": "^3.1.1",
    "shortid": "^2.2.8"
  }
}
