{
  "name": "budget",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Colten Rouska <crouska@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=8 <9"
  },
  "scripts": {
    "local": "nodemon src -e js,graphql",
    "dev:web": "parcel serve --port 4000 public/index.html",
    "start": "parcel public/index.html",
    "precommit": "lint-staged",
    "test": "mocha --opts ./test/mocha.opts",
    "compose:up": "docker-compose -f .local/docker-compose.yml up -d",
    "lint:fix": "npm run lint -- --fix",
    "lint": "xo --prettier --quiet"
  },
  "lint-staged": {
    "*.{js}": [
      "npm run lint:fix",
      "git add"
    ],
    "*.jsx": [
      "xo --prettier --quiet --plugin eslint-plugin-react --ext \".jsx\" --global window --global document --fix",
      "git add"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write --print-width=160",
      "git add"
    ]
  },
  "xo": {
    "envs": [
      "mocha"
    ],
    "plugins": [
      "unicorn"
    ],
    "extends": [
      "xo-react/space"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      }
    },
    "overrides": [
      {
        "files": "public/**/*.jsx",
        "plugins": [
          "react"
        ],
        "globals": [
          "window",
          "document"
        ]
      }
    ],
    "rules": {
      "operator-linebreak": "off",
      "prefer-destructuring": "warn",
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "import/no-unassigned-import": "warn",
      "unicorn/no-process-exit": "warn",
      "camelcase": "warn",
      "indent": [
        "error",
        2
      ]
    }
  },
  "prettier": {
    "semi": true,
    "useTabs": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "singleQuote": true,
    "bracketSpacing": true
  },
  "devDependencies": {
    "babel-polyfill": "^6.26.0",
    "casual": "^1.5.19",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-xo-react": "^0.16.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.8.2",
    "history": "^4.7.2",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.2",
    "mocha": "^5.2.0",
    "parcel": "^1.8.1",
    "prettier": "^1.13.3",
    "react": "^16.0.0",
    "react-css-modules": "^4.7.2",
    "react-dom": "^16.0.0",
    "sinon": "^5.0.10",
    "xo": "^0.21.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free-webfonts": "^1.0.9",
    "apollo-server-hapi": "^1.3.6",
    "axios": "^0.18.0",
    "bootstrap": "^4.1.1",
    "component": "^1.1.0",
    "csv": "^3.1.0",
    "decimal.js": "^10.0.1",
    "fast-glob": "^2.2.1",
    "graphql": "^0.13.2",
    "graphql-playground-middleware-hapi": "^1.6.2",
    "graphql-tools": "^3.0.2",
    "hapi": "^17.5.1",
    "jquery": "^3.3.1",
    "lodash.omit": "^4.5.0",
    "lodash.orderby": "^4.6.0",
    "moment": "^2.22.2",
    "mongodb": "^3.1.0-beta4",
    "popper.js": "^1.14.3",
    "prop-types": "^15.6.1",
    "react-datepicker": "^1.5.0",
    "react-router-dom": "^4.3.0-rc.3",
    "shortid": "^2.2.8"
  }
}
