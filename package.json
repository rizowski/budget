{
  "name": "budget",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Colten Rouska <crouska@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=8 <9"
  },
  "scripts": {
    "local": "nodemon src",
    "start": "parcel public/index.html",
    "precommit": "lint-staged",
    "test": "mocha --opts ./test/mocha.opts",
    "compose:up": "docker-compose -f .local/docker-compose.yml up -d",
    "lint:fix": "npm run lint -- --fix",
    "lint": "xo --prettier --quiet"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ],
    "*.{js,css,md}": [
      "prettier --write --print-width=160",
      "git add"
    ],
    "*.json": [
      "prettier --write --print-width=160",
      "git add"
    ]
  },
  "xo": {
    "envs": [
      "mocha"
    ],
    "plugins": [
      "unicorn"
    ],
    "rules": {
      "operator-linebreak": "off",
      "prefer-destructuring": "warn",
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        2
      ],
      "import/no-unassigned-import": "warn",
      "unicorn/no-process-exit": "warn",
      "camelcase": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "useTabs": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "singleQuote": true,
    "bracketSpacing": true
  },
  "devDependencies": {
    "babel-polyfill": "^6.26.0",
    "casual": "^1.5.19",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-plugin-prettier": "^2.6.0",
    "history": "^4.7.2",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.2",
    "mocha": "^5.2.0",
    "parcel": "^1.8.1",
    "prettier": "^1.13.3",
    "react": "^16.3.2",
    "react-css-modules": "^4.7.2",
    "react-dom": "^16.3.2",
    "react-router": "^4.2.0",
    "sinon": "^5.0.10",
    "xo": "^0.21.1"
  },
  "dependencies": {
    "apollo-server-hapi": "^1.3.6",
    "component": "^1.1.0",
    "csv": "^3.1.0",
    "decimal.js": "^10.0.1",
    "fast-glob": "^2.2.1",
    "graphql": "^0.13.2",
    "graphql-playground-middleware-hapi": "^1.6.2",
    "graphql-tools": "^3.0.2",
    "hapi": "^17.5.1",
    "lodash.omit": "^4.5.0",
    "lodash.orderby": "^4.6.0",
    "mongodb": "^3.1.0-beta4",
    "shortid": "^2.2.8"
  }
}
